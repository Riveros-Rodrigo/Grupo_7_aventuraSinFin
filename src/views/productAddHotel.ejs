<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{ title : 'Crear producto' }) %>

    <body style="
      min-height: 100vh;
      background-color: #f8f9fa;
      display: flex;
      flex-direction: column;
      background-image: url(/images/jong-marshes-79mNMAvSORg-unsplash.jpg);
    ">
        <%- include('./partials/header') %>

            <main class="flex-grow-1 d-flex justify-content-center align-items-center">
<!-- Contenedor del formulario -->
<div class="container" style="margin-top: 20px; margin-bottom: 20px">
    <div class="row">
        <div class="col-md-12 col-lg-10 mx-auto">
            <div class="card border rounded">
                <div class="card-header bg-white d-flex justify-content-between">
                    <a class="link-dark " href="/dashboard">Volver al dasboard</a>
                    <h4 class="card-title">Agregar Hotel</h4>

                </div>
                <div class="card-body">
                    <form action="" method="POST" enctype="multipart/form-data" class="row">
                        <div class="col-12 col-md-4">
                            <img src="/images/default.webp" class="img-fluid" alt="" id="img-prev">
                        </div>
                       <div class="col-12 col-md-4">
                        <!-- hotel -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Hotel</label>
                            <input type="text" class="form-control <%= locals.errors ? (errors.name ? 'is-invalid' : 'is-valid') : '' %>" id="productName" name="name" value="<%= locals.old && (old.name && old.name) %>"/>
                            <small id="nameErrors" class="text-danger small"> <%= locals.errors && (errors.name && errors.name.msg) %> </small>
                        </div>
                        <div class="row">
                              <!-- telefono -->
                          <div class="mb-3 col-12">
                            <label for="phone" class="form-label">Teléfono</label>
                            <input type="text" class="form-control <%= locals.errors ? (errors.phone ? 'is-invalid' : 'is-valid') : '' %>" id="productphone" name="phone" value="<%= locals.old && (old.phone && old.phone) %>"/>
                            <small id="phoneErrors" class="text-danger small"> <%= locals.errors && (errors.phone && errors.phone.msg) %> </small>
                        </div>
                        <!-- ciudad -->
                        <div class="mb-3 col-6">
                            <label for="city" class="form-label">Ciudad</label>
                            <input type="text" class="form-control <%= locals.errors ? (errors.city ? 'is-invalid' : 'is-valid') : '' %>" id="productcity" name="city" value="<%= locals.old && (old.city && old.city) %>"/>
                            <small id="cityErrors" class="text-danger small"><%= locals.errors && (errors.city && errors.city.msg) %> </small>
                        </div>
                        <!-- countries -->
                        <div class="mb-2 col-6">
                            <label for="country" class="form-label" >Países</label>
                            <select class="form-select <%= locals.errors && (errors.country && 'is-invalid') %>" aria-label="Default select example" name="country" id="country">
                                <option selected hidden value="">Seleccione...</option>
                                <% countries.forEach(country=> { %>
                                  <option value="<%= country.id %>" <%= locals.old && (old.country == country.id && 'selected' )%> >
                                    <%= country.name %>
                                  </option>
                                  <% }) %>
                              </select>
                              <small id="nameErrors" class="text-danger small"> <%= locals.errors && (errors.country && errors.country.msg) %> </small>
                        </div>
                        
                    </div>
                    </div>
                    
                    <div class="col-12 col-md-4">
                        <!-- telefono -->
                        <div class="mb-3 col-12">
                            <label for="address" class="form-label">Dirección</label>
                            <input type="text" class="form-control <%= locals.errors ? (errors.address ? 'is-invalid' : 'is-valid') : '' %>" id="productaddress" name="address" value="<%= locals.old && (old.address && old.address) %>"/>
                            <small id="cityErrors" class="text-danger small"> <%= locals.errors && (errors.city && errors.city.msg) %> </small>
                        </div>
                        <!-- description -->
                        <div class="mb-3">
                            <label for="description" class="form-label">Descripción</label>
                            <textarea class="form-control <%= locals.errors ? (errors.description ? 'is-invalid' : 'is-valid') : '' %>" id="description" style="resize: none" rows="4" name="description"><%= locals.old && (old.description && old.description) %></textarea>
                            <small id="descriptionErrors" class="text-danger small"> <%= locals.errors && (errors.description && errors.description.msg) %> </small>
                        </div>
                       
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <label for="images" class="btn btn-secondary"><i class="fas fa-plus"></i> Imagen</label>
                            <input hidden class="form-control" type="file" id="images"
                                name="images" onchange="onImagePrev(event)"/>
                            <button class="btn btn-dark" type="submit">
                                Guardar
                            </button>
                        </div>
                        <small class="text-danger small"> <%= locals.errors && (errors.images && errors.images.msg) %> </small>
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

            <%- include('partials/footer') %>
            <script>
                const onImagePrev = ({target}) => {
                    const url = URL.createObjectURL(target.files[0])
                    document.getElementById('img-prev').setAttribute('src',url)
                }
            </script>
            <!-- <script src="/javascripts/validations/validationProductAdd.js"></script> -->
    </body>

</html>