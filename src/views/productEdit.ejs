<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{ title : 'Crear producto' }) %>

    <body style="
      min-height: 100vh;
      background-color: #f8f9fa;
      display: flex;
      flex-direction: column;
    ">
        <%- include('./partials/header') %>

            <main class="flex-grow-1 d-flex justify-content-center align-items-center" style="
        background-image: url('/images/jong-marshes-79mNMAvSORg-unsplash.jpg');
        background-size: cover;
        background-position: center;
      ">
<!-- Contenedor del formulario -->
<div class="container" style="margin-top: 20px; margin-bottom: 20px">
    <div class="row">
        <div class="col-md-12 col-lg-10 mx-auto">
            <div class="card border rounded">
                <div class="card-header bg-white d-flex justify-content-between">
                    <h4 class="card-title">Editando: <%= name %></h4>
                    <a class="link-dark " href="/dashboard">Volver al dasboard</a>

                </div>
                <div class="card-body">
                    <form action="/products/update/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="row">
                        <div class="col-12 col-md-4">
                            <img src="/images/<%= image %>" class="img-fluid" alt="" id="img-prev">
                        </div>
                       <div class="col-12 col-md-4">
                        <!-- destino -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Destino</label>
                            <input type="text" class="form-control <%= locals.errors ? (errors.name ? 'is-invalid' : 'is-valid') : '' %>" id="productName" name="name" value="<%= name %>"/>
                            <small id="nameErrors" class="text-warning fs-6"> <%= locals.errors && (errors.name && errors.name.msg) %> </small>
                        </div>
                        <!-- ciudad -->
                        <div class="mb-3">
                            <label for="city" class="form-label">Ciudad</label>
                            <input type="text" class="form-control <%= locals.errors ? (errors.city ? 'is-invalid' : 'is-valid') : '' %>" id="productcity" name="city" value="<%= city %>"/>
                            <small id="cityErrors" class="text-warning fs-6"> <%= locals.errors && (errors.city && errors.city.msg) %> </small>
                        </div>
                        <!-- countries -->
                        <div class="mb-2">
                            <label for="country" class="form-label" >Países</label>
                            <select class="form-select <%= locals.errors && (errors.country && 'is-invalid') %>" aria-label="Default select example" name="country" id="country">
                                <option selected hidden value="">Seleccione...</option>
                                <% countries.forEach(country=> { %>
                                  <option value="<%= country.id %>" <%= countryId == country.id && 'selected' %> >
                                    <%= country.name %>
                                  </option>
                                  <% }) %>
                              </select>
                              <small id="nameErrors" class="text-warning fs-6"> <%= locals.errors && (errors.country && errors.country.msg) %> </small>
                        </div>
                    </div>
                    
                    <div class="col-12 col-md-4">

                        <!-- description -->
                        <div class="mb-3">
                            <label for="description" class="form-label">Descripción</label>
                            <textarea class="form-control <%= locals.errors ? (errors.description ? 'is-invalid' : 'is-valid') : '' %>" id="description" style="resize: none" rows="5" name="description"><%= description %></textarea>
                            <small id="descriptionErrors" class="text-warning fs-6"> <%= locals.errors && (errors.description && errors.description.msg) %> </small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <label for="images" class="btn btn-secondary"><i class="fas fa-plus"></i> Imagen</label>
                            <input hidden class="form-control" type="file" id="images"
                                name="images" onchange="onImagePrev(event)"/>
                            <button class="btn btn-dark" type="submit">
                                Guardar
                            </button>
                        </div>
                        <small class="text-warning fs-6"> <%= locals.errors && (errors.images && errors.images.msg) %> </small>
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

            <%- include('partials/footer') %>
            <!-- <script src="/javascripts/validations/validationProductAdd.js"></script> -->
            <script>
                const onImagePrev = ({target}) => {
                    const url = URL.createObjectURL(target.files[0])
                    document.getElementById('img-prev').setAttribute('src',url)
                }
            </script>
    </body>

</html>